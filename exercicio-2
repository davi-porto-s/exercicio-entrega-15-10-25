<body>
    <div class="form-container">
        <form id="form-nome">
            <input type="text" id="nome" placeholder="Digite a quantidade de itens">
            <button type="submit">Gerar Lista</button>
        </form>
        <p id="aviso"></p>
        <ul id="lista"></ol>
    </div>

    <script>
        document.getElementById('form-nome').addEventListener('submit', function(event) {
            event.preventDefault();
            gerarLista();
        });

        function gerarLista() {
            const numeroInput = document.getElementById('nome').value; 
            const lista = document.getElementById('lista');
            const aviso = document.getElementById('aviso');

            lista.innerHTML = '';
            aviso.textContent = '';

            if (!numeroInput) {
                aviso.textContent = "Por favor, insira um número válido";
                aviso.style.fontStyle = 'italic';
                aviso.style.color = 'red';
                return;
            }

            const numero = parseInt(numeroInput);

            if (numero === 5) {
                for (let i = 1; i <= 5; i++) {
                    const li = document.createElement('li');
                    li.textContent = `Davi Porto Silva ${i}`;
                    li.style.color = 'green';
                    lista.appendChild(li);
                }
            } else {
                aviso.textContent = "Por favor, insira um número válido";
                aviso.style.fontStyle = 'italic';
                aviso.style.color = 'red';
            }
        }
    </script>
</body>
