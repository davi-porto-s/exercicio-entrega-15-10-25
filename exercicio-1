<body>
    <div class="form-container">
        <h1>Bem Vindo!</h1>
        <h2>Digite seu nome:</h2>
        <form id="form-nome">
            <input type="text" id="nome" placeholder="Nome">
            <button type="submit">Clique aqui</button>
        </form>
        <p id="aviso"></p>
    </div>

    <script>
        const form = document.getElementById('form-nome');
        const aviso = document.getElementById('aviso');

        form.addEventListener('submit', function(e) {
            e.preventDefault();
            const nome = document.getElementById('nome').value.trim();
            if(nome) {
                aviso.style.color = 'green'
                aviso.style.fontStyle = 'normal'
                aviso.textContent = `Olá, ${nome}! Seja bem-vindo a página do Davi!`;
            } else {
                aviso.style.fontStyle =  'italic'
                aviso.style.color = 'red'
                aviso.textContent = `Por favor, insira seu nome`;
            }
        });
    </script>
</body>
